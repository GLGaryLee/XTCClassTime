<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TodayClass"
            android:id="@+id/MainCaptionTextView"                
            android:textColor="#FF8502"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
        <Button
            android:layout_marginTop="6dp"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:id="@+id/AnotherAddClassButton"
            android:background="@drawable/bg_another_add_button"/>
        <Button
            android:layout_height="22.5dp"
            android:layout_width="22.5dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_menu_bg"
            android:id="@+id/SettingsButton"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageButton
            android:id="@+id/PrevDayButton"
            android:layout_marginLeft="5dp"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/left"
            android:scaleType="fitXY"
            android:paddingTop="7.5dp"
            android:paddingBottom="7.5dp"
            android:background="@drawable/bg_prev_day"/>
        <Button
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:id="@+id/DayDisplay"
            android:text="@string/TestToday"
            android:background="@drawable/bg_view_day"/>
        <ImageButton
            android:id="@+id/NextDayButton"
            android:layout_marginLeft="110dp"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:scaleType="fitXY"
            android:paddingTop="7.5dp"
            android:paddingBottom="7.5dp"
            android:background="@drawable/bg_next_day"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/AddClassTodayButton"
        android:background="@drawable/selector_alarm_add_large"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:text="@string/NoClass"
        android:id="@+id/NoClassTextView"/>
    <ListView
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"            
        android:id="@+id/ListViewClasses">
    </ListView>
</LinearLayout>