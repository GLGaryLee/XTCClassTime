<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择颜色"
        android:textColor="#FF8502"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center">
        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/DefaultX"
            android:id="@+id/PickDefaultButton"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="76dp"
        android:gravity="center">
        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ChineseX"
            android:id="@+id/PickChineseButton"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/MathX"
            android:id="@+id/PickMathButton"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/EnglishX"
            android:id="@+id/PickEnglishButton"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="122dp"
        android:gravity="center">
        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/MusicX"
            android:id="@+id/PickMusicButton"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ArtX"
            android:id="@+id/PickArtButton"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/PEX"
            android:id="@+id/PickPEButton"/>
    </LinearLayout>
</RelativeLayout>
