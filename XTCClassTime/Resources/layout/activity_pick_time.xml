<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TimePickerTitle"
        android:text="EE"
        android:textColor="#FF8502"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        />
    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/AddHour"
        android:background="@drawable/bg_add_30dp"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="0时"
        android:id="@+id/HourText"
        android:textColor="#FF8502"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/MinusHour"
        android:background="@drawable/bg_minus_30dp"/>
    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:id="@+id/AddMinute"
        android:background="@drawable/bg_add_30dp"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginRight="15dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="10分"
        android:layout_alignParentRight="true"
        android:id="@+id/MinuteText"
        android:textColor="#FF8502"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:id="@+id/MinusMinute"
        android:background="@drawable/bg_minus_30dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_dialog_button_cancel"
            android:id="@+id/CancelPickTimeButton"
            android:textSize="16sp"
            android:text="取消"/>
        <Button
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="81dp"
            android:id="@+id/PickTimeButton"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/bg_dialog_button_decide"
            android:text="确定"/>
    </RelativeLayout>
</RelativeLayout>
