<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item android:drawable="@drawable/add"/>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:drawable="@drawable/add"/>
      <item>
        <shape>
          <gradient android:angle="0" android:endColor="#b3000000" android:startColor="#b3000000" android:type="linear" android:useLevel="true" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
