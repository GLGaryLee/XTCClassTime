<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item>
        <shape>
          <corners android:bottomRightRadius="18dp" android:topRightRadius="18dp" android:bottomLeftRadius="18dp" android:topLeftRadius="18dp"/>
          <gradient android:angle="0" android:endColor="#FF7F27" android:startColor="#FF7F27" android:type="linear" android:useLevel="true" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape>
          <corners android:bottomRightRadius="18dp" android:topRightRadius="18dp" android:bottomLeftRadius="18dp" android:topLeftRadius="18dp"/>
          <gradient android:angle="0" android:endColor="#FF7F27" android:startColor="#FF7F27" android:type="linear" android:useLevel="true" />
        </shape>
      </item>
      <item>
        <shape>
          <corners android:bottomRightRadius="18dp" android:topRightRadius="18dp" android:bottomLeftRadius="18dp" android:topLeftRadius="18dp"/>
          <gradient android:angle="0" android:endColor="#b3000000" android:startColor="#b3000000" android:type="linear" android:useLevel="true" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
